{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@storely/shared": ["../../packages/shared/src"],
      "@storely/shared/*": ["../../packages/shared/src/*"],
      "@storely/database": ["../../packages/database/src"],
      "@storely/database/*": ["../../packages/database/src/*"],
      "@storely/config": ["../../packages/config/src"],
      "@storely/config/*": ["../../packages/config/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
